@model RetailStoreWebApp.Core.Entities.ViewModels.ProductGetModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>
<hr />

<div class="container">
    <form asp-controller="Product" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="ProductName" class="control-labet"></label>
            <input asp-for="ProductName" class="from-control" disabled>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-labet"></label>
            <input asp-for="Quantity" class="from-control">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceUsd" class="control-labet"></label>
            <input asp-for="PriceUsd" class="from-control">
            <span asp-validation-for="PriceUsd" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceTry" class="control-labet"></label>
            <input asp-for="PriceTry" class="from-control" disabled>
            <span asp-validation-for="PriceTry" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-primary">
        </div>
    </form>
</div>

<div>
    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Back To List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
